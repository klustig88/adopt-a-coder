<div class="row">
  <div class="small-12 columns">
    <h1><%= @candidate.name %>'s Profile</h1>
  </div>

  <div class="small-12 large-3 columns">
    <%= image_tag(Image.find(@candidate.profile_image).url, size: "350", alt: "Image of #{@candidate.name}") %>
    <div class="center">
      <% if @candidate == current_campaign.candidate %>
        <a href="#" class="full-width button success no-margin" data-reveal-id="payment-modal">Contribute</a>
      <% else %>
        <%= link_to 'Nominate!', nominate_candidate_path(@candidate), method: :post, class: "small button round submit-nomination" %>
      <% end %>
    </div>
  </div>

  <div class="small-12 large-6 columns">
    <div class="panel">
      <h3>Mission Statement</h3>
      <p><%= @candidate.mission %></p>
    </div>

    <div class="">
      <h3>Biography</h3>
      <p><%= @candidate.biography %></p>
    </div>


    <div class="">
      <%= render "application_highlights" %>
    </div>
  </div>

  <div class="small-12 large-3 columns">
    <div class="panel">
      <%= render "social_media" %>
    </div>
  </div>

  <div id="dialog-nomination-submit" title="Confirm Nomination?">
    <p><span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>Are you sure you want to nominate this candidate for the next campaign? Please note you are allowed only one nomination per campaign.</p>
  </div>

</div>
