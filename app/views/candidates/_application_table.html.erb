<div class="small-12 columns">
  <table>
    <h6>Application Status</h6>
    <tr>
      <td>To Do:</td>
      <td>Status:</td>
    </tr>
    <tr>
      <td><%= link_to 'Profile', edit_candidate_path(current_user) %></td>
      <td></td>
    </tr>
    <% if !current_application.complete %>
      <tr>
        <td><%= link_to 'Application Form', edit_candidate_application_path(current_user, current_user.application) %></td>
        <td><%= number_to_percentage(current_user.application.response_percent_complete, precision: 0) %> Complete</td>
      </tr>
      <tr>
          <td><%= link_to 'Submit Application', candidate_application_submit_path, {id: 'submit-application', method: :post} %></td>
          <td>Not Submitted</td>
      </tr>
    <% else %>
      <tr>
        <td><%= link_to 'Application', candidate_application_path(current_user, current_user.application) %></td>
        <td>Completed</td>
      </tr>
      <tr>
          <td>Already</td>
          <td>Submitted</td>
      </tr>
      <% end %>
  </table>
</div>

<div id="dialog-confirm" title="Confirm Submission?">
  <p><span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>Please note an application cannot be edited once it has been submitted. Are you sure you want to submit your application?</p>
</div>
