  <% if @candidates && @candidates.any? %>
    <% @candidates.each do |candidate| %>
      <div class="pure-u-1-3">
        <%= image_tag Image.find(candidate.profile_photo_id).url, size: "150" %>
        <%= candidate.name %>
        <div class="pure-button">
          Nominate Me!
        </div>
      </div>
    <% end %>
  <% end %>
