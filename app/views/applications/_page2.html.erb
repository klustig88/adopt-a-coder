<%= form_for current_application, url: candidate_application_path(current_user,current_application), html: { method: "PATCH" } do |f| %>
  <%= field_set_tag "Part 2", class: "panel" do %>
    <% current_application.responses.order("id ASC").slice(4,4).each do |response| %>
      <%= f.fields_for :responses, response do |r| %>
        <%= r.label :body, "#{response.question.body}" %>
        <%= r.text_area :body, class: "application-form-field" %>
      <% end %>
    <% end %>
    <%= f.submit "Prev Page", name: "prev", class: "small button success prev-app-page" %>
    <%= f.submit "Next Page", name: "next", class: "small button success next-app-page" %>
  <% end %>
<% end %>
